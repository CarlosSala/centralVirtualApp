<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu.principalActivity">

    <Button
    android:id="@+id/btn_add_mac"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="200dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="100dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="100dp"
    android:text="Agregar MAC y números"
    />

    <Button
        android:id="@+id/btn_modify_mac"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_mac"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="100dp"
        android:text="Modificar MAC"
        />

    <Button
        android:id="@+id/btn_modify_numbers"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_modify_mac"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="100dp"
        android:text="Modificar números"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

