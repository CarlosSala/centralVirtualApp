<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macscanner">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity
            android:name=".menu.addMac.addNumbers.shareQrActivity"
            android:parentActivityName=".menu.addMac.addNumbers.resumeAddNumbersActivity"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".menu.addMac.addNumbers.resumeAddNumbersActivity"
            android:parentActivityName=".menu.addMac.addNumbers.addNumbers2Activity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".menu.addMac.addNumbers.addNumbers2Activity"
            android:parentActivityName=".menu.addMac.addNumbers.addNumbers1Activity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".menu.addMac.addNumbers.addNumbers1Activity"
            android:parentActivityName=".menu.addMac.addMacActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".menu.addMac.addMacActivity"
            android:parentActivityName=".menu.principalActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".menu.principalActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CustomScannerActivity"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>