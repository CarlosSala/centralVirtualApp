<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macscanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity
            android:name=".RecoverPasswordActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="locked"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="locked"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".menu.PrincipalActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|fontScale|keyboard|locale|screenLayout|uiMode"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".menu.addMac.StartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|fontScale|keyboard|locale|screenLayout|uiMode"
            android:parentActivityName=".menu.PrincipalActivity"
            android:screenOrientation="locked"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".menu.addMac.addNumbers.addNumbers1Activity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|fontScale|keyboard|locale|screenLayout|uiMode"
            android:parentActivityName=".menu.addMac.StartActivity"
            android:screenOrientation="locked"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".menu.addMac.addNumbers.addNumbers2Activity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|fontScale|keyboard|locale|screenLayout|uiMode"
            android:parentActivityName=".menu.addMac.addNumbers.addNumbers1Activity"
            android:screenOrientation="locked"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".menu.addMac.addNumbers.resumeAddNumbersActivity"
            android:parentActivityName=".menu.addMac.addNumbers.addNumbers2Activity"
            android:screenOrientation="locked" />
        <activity
            android:name=".menu.addMac.addNumbers.sendDataActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|fontScale|keyboard|locale|screenLayout|uiMode"
            android:parentActivityName=".menu.addMac.addNumbers.resumeAddNumbersActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".menu.addMac.addNumbers.shareQrActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize|fontScale|keyboard|locale|screenLayout|uiMode"
            android:screenOrientation="locked" />
        <activity
            android:name=".CustomScannerActivity"
            android:screenOrientation="locked"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>